<Window x:Class="Snake.RankingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake"
        mc:Ignorable="d"
        Title="RankingWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.1*"></RowDefinition>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="1" HorizontalAlignment="Stretch" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Lp."/>
                <DataGridTextColumn Header="Nazwa gracza" Width="*"/>
                <DataGridTextColumn Header="Liczba punktów" Width="*"/>
                <DataGridTextColumn Header="Czas gry" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
